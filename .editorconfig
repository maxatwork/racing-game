; editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[GNUmakefile]
indent_style = tab

[Makefile]
indent_style = tab

[*.json]
indent_size = 2

[rules]
indent_style = tab

[.eslintrc]
indent_size = 2
